# Docker Desktop environment for n8n + MongoDB

# MongoDB (used by ingestion/cache and workflows)
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=example
MONGO_PORT=27017

# App DB (logical database name used by scripts)
DB_NAME=agents_kb

# Connection string (used by scripts; n8n uses stored credentials in UI)
MONGO_URI=mongodb://root:example@mongodb:27017/?authSource=admin

# n8n
N8N_PORT=5678
N8N_HOST=localhost
N8N_PROTOCOL=http
TZ=Asia/Shanghai

# Chatbot router
CHATBOT_PORT=8080
N8N_WEBHOOK_URL=http://n8n:5678/webhook/chat_ingest

# Optional: protect n8n UI
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=change_me
